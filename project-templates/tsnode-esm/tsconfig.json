{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node-lts/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ESNext"
        ],
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "esm": true
    }
}